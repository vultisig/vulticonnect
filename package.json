{
  "name": "vulticonnect",
  "displayName": "Vulticonnect",
  "version": "0.0.1",
  "description": "VultiConnect is a Chrome extension that integrates Vultisig into web applications, enabling users to securely sign transactions.",
  "author": "https://vultisig.com",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package"
  },
  "dependencies": {
    "7z-wasm": "^1.1.0",
    "@keplr-wallet/types": "^0.12.145",
    "@plasmohq/messaging": "^0.6.2",
    "@trustwallet/wallet-core": "4.2.0-dev-rc1",
    "@xdefi/chains": "^1.0.0",
    "@xdefi/chains-controller": "^2.0.3",
    "@xdefi/chains-core": "^2.0.8",
    "@xdefi/chains-graphql": "^1.2.10",
    "@xdefi/chains-thor": "^2.0.10",
    "antd": "^5.21.2",
    "axios": "^1.7.7",
    "ethers": "^6.13.3",
    "i18next": "^23.15.1",
    "keymirror": "^0.1.1",
    "mipd": "^0.0.7",
    "plasmo": "0.89.2",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-i18next": "^15.0.2",
    "react-router-dom": "^6.26.2",
    "uuid": "^10.0.0",
    "zxing-wasm": "^1.2.12"
  },
  "devDependencies": {
    "@bufbuild/buf": "^1.43.0",
    "@bufbuild/protobuf": "^2.1.0",
    "@bufbuild/protoc-gen-es": "^2.1.0",
    "@types/chrome": "0.0.273",
    "@types/keymirror": "^0.1.4",
    "@types/node": "22.7.4",
    "@types/react": "18.3.10",
    "@types/react-dom": "18.3.0",
    "@types/uuid": "^10.0.0",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.47",
    "sass": "^1.79.4",
    "typescript": "5.6.2"
  },
  "manifest": {
    "content_security_policy": {
      "extension_pages": "script-src 'self' 'wasm-unsafe-eval' http://localhost;object-src 'self';"
    },
    "host_permissions": [
      "https://*/*"
    ],
    "permissions": [
      "activeTab",
      "storage"
    ],
    "web_accessible_resources": [
      {
        "resources": [
          "static/*/**",
          "wallet-core.wasm",
          "tabs/wallet-core.wasm"
        ],
        "matches": [
          "<all_urls>"
        ]
      }
    ]
  },
  "packageManager": "pnpm@9.6.0+sha512.38dc6fba8dba35b39340b9700112c2fe1e12f10b17134715a4aa98ccf7bb035e76fd981cf0bb384dfa98f8d6af5481c2bef2f4266a24bfa20c34eb7147ce0b5e"
}
