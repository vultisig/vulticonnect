{
  "name": "vulticonnect",
  "displayName": "Vulticonnect",
  "version": "0.0.1",
  "description": "VultiConnect is a Chrome extension that integrates Vultisig into web applications, enabling users to securely sign transactions.",
  "author": "https://vultisig.com",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package"
  },
  "dependencies": {
    "@plasmohq/messaging": "^0.6.2",
    "@trustwallet/wallet-core": "4.1.8-rc1",
    "antd": "^5.20.6",
    "axios": "^1.7.7",
    "ethers": "^6.13.2",
    "i18next": "^23.15.1",
    "keymirror": "^0.1.1",
    "plasmo": "0.89.2",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-i18next": "^15.0.1",
    "react-router-dom": "^6.26.2",
    "uuid": "^10.0.0",
    "zxing-wasm": "^1.2.12"
  },
  "devDependencies": {
    "@types/chrome": "0.0.258",
    "@types/keymirror": "^0.1.4",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "@types/uuid": "^10.0.0",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.45",
    "sass": "^1.78.0",
    "typescript": "5.3.3"
  },
  "manifest": {
    "content_security_policy": {
      "extension_pages": "script-src 'self' 'wasm-unsafe-eval' http://localhost;object-src 'self';"
    },
    "host_permissions": [
      "https://*/*"
    ],
    "permissions": [
      "activeTab",
      "storage",
      "tabs"
    ],
    "web_accessible_resources": [
      {
        "resources": [
          "static/*/**"
        ],
        "matches": [
          "<all_urls>"
        ]
      },
      {
        "resources": [
          "wallet-core.wasm"
        ],
        "matches": [
          "<all_urls>"
        ]
      }
    ]
  },
  "packageManager": "pnpm@9.6.0+sha512.38dc6fba8dba35b39340b9700112c2fe1e12f10b17134715a4aa98ccf7bb035e76fd981cf0bb384dfa98f8d6af5481c2bef2f4266a24bfa20c34eb7147ce0b5e"
}
